<h4>Post details:<h4/>
<p>
  <%= @row['content'] %>
  <br />
  <br />
  Added at <%= @row['created_date']%>
</p>
<br/>
<h4>Comments:</h4>
<% @comments.each do |comment|%>
<br/>
<p>
  <%= comment['content'] %>
  <br/>
  Added at <%= comment['created_date']%>

</p>

<% end %>
<hr/>
<p>
  <form action="/details/<%= @row['id']%>" method="POST" role="form">
    <textarea name="content" class="form-control" rows="6" placeholder="Urgh Here!!!" style="width: 400px"></textarea>
    <br />
    <button type="submit" class="btn btn-primary">Add more URGH</button>
  </form>
</p>
